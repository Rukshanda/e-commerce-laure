<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <div class="cart-container max-w-auto">
      <div class="cart sm:px-20 px-2 py-10 poppins">
        <div class="heading poppins text-4xl font-semibold">Cart Page</div>

        <div class="cart-cards py-10 md:px-10 px-5 flex flex-col gap-8">
          <!-- ------ cart-1 -->
          <% user.cart.forEach((item)=> {%>
          <div
            class="cart-card relative lg:w-[800px] md:w-[600px] max-w-auto m flex md:flex-row flex-col border border-[#d4af37]"
          >
            <div
              class="product-img lg:w-[300px] md:w-[200px] flex justify-center"
            >
              <img
                src="<%= item.product.image  %>"
                alt="<%= item.product.name %>"
                class="object-cover"
              />
            </div>
            <div
              class="carts-content lg:w-[500px] md:w-[400px] w-[100%] bg-charcolblack flex flex-col gap-4 justify-between md:py-10 md:px-10 py-5 px-5"
            >
              <div class="content text-ivorywhite pt-5 flex gap-4 w-full">
                <div
                  class="content text-ivorywhite flex sm:flex-row flex-col gap-4 w-full sm:pb-0 pb-3"
                >
                  <!-- only right border here -->
                  <div
                    class="content-1 lg:text-[16px] sm:text-[16px] flex flex-col gap-1 sm:border-r border-ivorywhite sm:p-[10px] p-[5px]"
                  >
                    <span><%=item.product.name%></span>
                    <span>Category: <%= item.product.category %> </span>
                    <span>Price: Rs <%= item.product.price %> </span>
                  </div>

                  <span
                    class="border border-ivorywhite sm:hidden block w-full"
                  ></span>

                  <!-- no border here -->
                  <div
                    class="content-2 lg:text-[16px] sm:text-[16px] flex flex-col gap-1 sm:p-[10px] p-[5px]"
                  >
                    <span>Discount: Rs <%= item.product.discount %> </span>
                    <span
                      >Total: Rs <%= item.quantity * (item.product.price -
                      item.product.discount) %>
                    </span>
                  </div>
                </div>
              </div>
              <div class="cta flex flex-col gap-5 md:px-5 px-3">
                <div
                  class="inc-dec-cont flex flex-row gap-3 items-center text-ivorywhite"
                >
                  <span>
                    <a href="/cart/inc/<%= item.product._id%>">
                      <img src="/images/imgs/inc.svg" alt="" />
                    </a>
                  </span>
                  <span>
                    <span><%= item.quantity %></span>
                  </span>
                  <span>
                    <a href="/cart/dec/<%= item.product._id%>">
                      <img src="/images/imgs/dec.svg" alt="" />
                    </a>
                  </span>
                </div>
                <a
                  href="/ordernow/<%= item.product._id %>"
                  class="order-btn bg-golden text-charcolblack p-2 outline-none hover:text-[#1c1c1c]"
                >
                  <div class="flex justify-between items-center">
                    <span class="lg:text-[16px] sm:text-[16px] font-semibold"
                      >Order Now</span
                    >
                    <span><img src="/images/imgs/bag.svg" alt="" /></span>
                  </div>
                </a>
              </div>
            </div>
            <div class="absolute top-[5%] sm:left-[93%] left-[85%]">
              <a href="/cart/remove/<%= item.product._id %>">
                <img src="/images/imgs/golden-cross.svg" alt="" />
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- --------- Cart BTNS -->

    <div class="cart-btns sm:px-[7.5rem] px-8 w-full pb-10">
      <a
        href="/checkout-all"
        class="car-btn-btn hover:text-inherit flex justify-between items-center bg-golden text-charcolblack p-4 md:w-[25%] w-[100%] pulse-grow cursor-pointer border-2 border-[#1c1c1c]"
      >
        <span class="lg:text-[16px] sm:text-[16px] font-semibold">
          Checkout
        </span>
        <span><img src="/images/imgs/money.svg" alt="" /></span>
      </a>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>
